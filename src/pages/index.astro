---
import { Image } from 'astro:assets';
import meImage from '../assets/image3.jpg';
---

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jeffrey Chang</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5c24dc808e.js" crossorigin="anonymous"></script>
    
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
            margin: 0;
            padding: 10px;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            height: 100%;
            padding-top: 10px;
        }

        html {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .button-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin: 20px 0;
        }

        @media (min-width: 768px) {
            .button-container {
                flex-direction: row;
                gap: 20px;
            }
        }

        .bottom-text {
            position: absolute;
            bottom: 0;
            text-align: center;
            margin-top: 0px;
        }

        .armada{
            color: #008080;
        }

        .armada:hover {
            color: #3c00b3;
        }

        #text-t {
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            border-radius: 2px;
            border-color: bisque;
        }

        #text-bottom {
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            border-radius: 2px;
            border-color: bisque;
            margin-bottom: 0%;
        }

        .bottom-text > a {
            margin-bottom: 0px;
        }

        .button {
            display: inline-block;
            padding: 5px 10px;
            background-color: #008080;
            color: rgb(255, 232, 232);
            text-align: center;
            border-radius: 100px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            transition: all; transition-duration: 350ms
        }

        .button:hover {
            background-color: #3c00b3;
            transform: scale(0.95);
        }

        .fade-out {
            animation: fadeOut 350ms ease;
            opacity: 0;
        }

        @keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; }
        }

        h1 {
            font-weight: lighter;
            font-size: xx-large;
        }

        h2 {
            font-weight: bold;
            font-size: large;
            margin-top: 0%;
        }

        h3 {
            text-align: center;
            font-weight: bold;
            grid-column: span 2;
        }

        div{
            width: 100%;
            font-size: 16px;
            line-height: 1.5;
        }

        #contact{
            background-color: #d1d5db;
            margin-top: auto;
            padding-bottom: 1%;
            margin-bottom: 0%;
        }

        .centered-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;

        }

        .my-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            max-width: 650px;
            margin: 0 auto;
            padding-top: 1%;
        }

        .rounded-image {
            max-width: 17em;
            max-height: 21em;
            border-radius: 10px;
            object-fit: contain;
            margin: 0%;
        }

        .image-container {
            display: grid;
            grid-template-columns: repeat(2, max-content);
            justify-content: center;
            align-items: center;
            gap: 20px;
            margin: auto;
        }

        .top-image {
            max-width: 100%; 
            height: auto; 
            margin: 0px 0; 
        }

        .text-container {
            max-width: 30em;
            background-color: rgba(82, 84, 86, 0.05);
            color: black;
            padding: 20px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .main-text {
            font-size: large;
            font-weight: lighter;
        }

        @media (max-width: 768px) {
            .image-container {
                grid-template-columns: 1fr 1fr;
            }

            .rounded-image {
                width: 100%;
                border-radius: 10px;
                object-fit: contain;
                margin: 1%;
            }

            .rounded-image, .image-container {
                width: 100%;
                padding: 10px;
                border-radius: 10px;
            }

            .my-grid {
                grid-template-columns: 1fr;
            }

            .centered-container, .my-grid {
                padding-left: 10%;
                padding-right: 10%;
            }
        }

    </style>

</head>
<body class="bg-lime-50 text-stone-700 min-h-screen flex flex-col items-center py-10 gap-y-4">
    <h1>
        Jeffrey Chang
    </h1>
    <h3>
        Project Manager for THS Armada
    </h3> 

    <div class="image-container">

        <Image src={meImage} alt={"An image of meeee"} class="h-auto w-52 rounded-xl"/>

        <div class="text-container">
             <p class="main-text">Welcome to my website! I'm an engineering student studying 
             Industrial Engineering and Management at KTH Royal Institute of Technology.</p>
        </div>
    </div>    

    <div class="button-container">
        <a href="/cv" class="button">View My CV</a>
        <a href="/projects" class="button">Projects</a>
    </div>


        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const transitionLinks = document.querySelectorAll('a.button');

                transitionLinks.forEach(link => {
                    link.addEventListener('click', function(e) {
                        e.preventDefault();
                        document.body.classList.add('fade-out');

                        setTimeout(() => {
                            window.location.href = this.getAttribute('href');
                        }, 350);
                    });
                });
            });
        </script>


    </body>